    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug executable 'syneroym-cli'",
            "type": "lldb",
            "request": "launch",
            "cwd": "${workspaceFolder}/app-cli",
            "cargo": {
                "args": [
                    "run",
                    "--bin=syneroym-cli",
                    "--package=syneroym-cli"
                ]
            },
            "args": [
                "run-peer",
                "--config-file",
                "config.toml"
            ],
            "env": {
                "RUST_LOG": "syneroym=debug,info"
            }
        },
        {
            "name": "Debug unit tests in library 'common'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--package=common"
                ]
            }
        },
        {
            "name": "Debug executable 'syneroym'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin=syneroym",
                    "--package=syneroym"
                ]
            },
            "args": []
        },
        {
            "name": "Debug unit tests in executable 'syneroym'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--bin=syneroym",
                    "--package=syneroym"
                ]
            }
        }
    ]
}